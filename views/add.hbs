<h1>Add new device</h1>

<form action="/add" method="POST">
  <div class="input-field">
    <input id="title" name="title" type="text" class="validate" required>
    <label for="title">Device name</label>
    <span class="helper-text" data-error="Enter device name"></span>
  </div>
  <div class="input-field">
    <input id="price" name="price" type="text" class="validate" required min="1">
    <label for="price">Device price</label>
    <span class="helper-text" data-error="Enter device price"></span>
  </div>
  <div class="input-field">
    <input id="image" name="image" type="text" class="validate" required>
    <label for="image">image URL</label>
    <span class="helper-text" data-error="Enter image URL"></span>
  </div>
  <button class="btn btn-primary">Add device</button>
</form>